<?xml version="1.0" encoding="utf-8"?>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="177dp"
        android:layout_height="138dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="137dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_titulo" />

        <Button
            android:id="@+id/bt_dni"
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:layout_below="@+id/imageView"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_marginStart="-84dp"
            android:layout_marginLeft="-84dp"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_toEndOf="@+id/iv_logo"
            android:layout_toRightOf="@+id/iv_logo"
            android:background="@drawable/bt_dni"
            android:gravity="center"
            android:onClick="cambiarADni" />

        <Button
            android:id="@+id/bt_nacimiento"
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:layout_below="@+id/imageView"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="-82dp"
            android:layout_marginRight="-82dp"
            android:layout_toStartOf="@+id/iv_logo"
            android:layout_toLeftOf="@+id/iv_logo"
            android:background="@drawable/bt_nacimientos"
            android:gravity="center"
            android:onClick="cambiarNacimiento" />

        <Button
            android:id="@+id/bt_consulta"
            android:layout_width="190dp"
            android:layout_height="250dp"

            android:layout_below="@+id/bt_dni"

            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_marginStart="-84dp"
            android:layout_marginLeft="-84dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_toEndOf="@+id/iv_logo"
            android:layout_toRightOf="@+id/iv_logo"
            android:background="@drawable/bt_consultas"
            android:gravity="center"
            android:onClick="cambiarConsulta" />

        <Button
            android:id="@+id/bt_reconocimiento"
            android:layout_width="190dp"
            android:layout_height="250dp"

            android:layout_below="@+id/bt_nacimiento"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="-82dp"
            android:layout_marginRight="-82dp"
            android:layout_toStartOf="@+id/iv_logo"
            android:layout_toLeftOf="@+id/iv_logo"
            android:background="@drawable/bt_reconocimiento"
            android:gravity="center"
            android:onClick="cambiarReconocimiento" />
    </RelativeLayout>
    </ScrollView>

